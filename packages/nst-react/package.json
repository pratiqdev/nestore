{
  "name": "@pratiq/nestore-react",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type":"module",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/main.tsx --format esm,cjs --dts --external @pratiq/nestore",
    "dev": "tsup src/main.tsx --format esm,cjs --watch --dts --external @pratiq/nestore",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest"
  },
  "dependencies": {
    "@pratiq/nestore": "workspace:*",
    "@pratiq/nestore-types": "workspace:*"
  },
  "devDependencies": {
    "@pratiq/nestore-config": "workspace:*",
    "@types/jest": "^29.5.3",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "chai": "^4.3.7",
    "eslint": "^7.32.0",
    "jest": "^29.6.1",
    "react": "^17.0.2",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3",

    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^10.0.1",
    "babel-jest": "^29.6.1",
    "cleanup-after-each": "link:@testing-library/react/cleanup-after-each",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "jest-environment-jsdom": "^29.6.1",
    "jsdom": "^22.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
