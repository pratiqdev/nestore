{
  "name": "@nestate/core",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup",
    "//_dev": "tsup src/index.ts --format esm --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test-node": "node tests/node/test_1",
    "test-unit": "mocha"
  },
  "dependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0"
  },
  "devDependencies": {
    "@nestate/config": "workspace:*",
    "eslint": "^7.32.0",
    "react": "^17.0.2",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "name": "nestore",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "treeshake": true,
    "sourcemap": false,
    "clean": true,
    "shims": false,
    "target": "es2018",
    "bundle": true,
    "replaceNodeEnv": false,
    "minify": false,
    "minifyWhitespace": false,
    "minifyIdentifiers": false,
    "minifySyntax": false
  }
}
