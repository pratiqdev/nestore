{
  "name": "@nst/nestore",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts src/types.ts",
    "dev": "tsup",
    "//_dev": "tsup src/index.ts --format esm --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test-node": "node tests/node/test_1",
    "test-unit":"mocha"
  },
  "devDependencies": {
    "@nst/tsconfig": "workspace:*",
    "eslint": "^7.32.0",
    "eslint-config-nst": "workspace:*",
    "react": "^17.0.2",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "name": "nestore",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "treeshake": true,
    "sourcemap": false,
    "clean": true,
    "shims": false,
    "target": "es2018",
    "bundle": true,
    "replaceNodeEnv": false,
    "minify": false,
    "minifyWhitespace": false,
    "minifyIdentifiers": false,
    "minifySyntax": false
  },
  "dependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0"
  }
}
