{
  "private": true,
  "type":"module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run build && pnpm run serve",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "serve": "pnpm --filter=docs run serve",
    "test": "pnpm --filter=core run test",

    "pre":"pnpm install && pnpm run build && clear",
    "test-node":"pnpm run pre && pnpm --filter @nestate/core run test-node"
  },
  "devDependencies": {
    "@nestate/config": "workspace:*",
    "@changesets/cli": "^2.22.0",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.15.0"
}
